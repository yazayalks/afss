@model AFSS.ViewModels.LoginViewModel
<title>Authorization</title>

<link rel="stylesheet" href="~/css/styles-authorization.css">

@await Html.PartialAsync("MenuInput")
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
      <div asp-validation-summary="ModelOnly"></div>
<div class="container">
    <div class="input-data">
        <div class="input-data__items">
            <div class = "text-bold text-bold--black">Авторизация</div>
            <input asp-for="Email" class="input-text" name="example_email" type="login" placeholder="Логин"></input>
            <span asp-validation-for="Email"></span>
            <input  asp-for="Password" class="input-text" name="password" type="password" placeholder="Пароль"> </input>
             <span asp-validation-for="Password"></span>
            <div type="submit" value="Войти" id ="authorization" class = "button button--orange">Войти</div>
        </div>
    </div>
</div>
</form>

@await Html.PartialAsync("Footer")

